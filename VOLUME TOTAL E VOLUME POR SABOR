/*VOLUME TOTAL*/
SELECT 
			ANO, SUM(TOTAL_L_P) AS TOTAL_l
		FROM
			(SELECT 
			YEAR(DATA_VENDA) AS ANO,
				(SUM(QUANTIDADE) * B.TAMANHO) AS TOTAL_L_P,
				TAMANHO
		FROM
			itens_notas_fiscais A
		INNER JOIN notas_fiscais C ON A.NUMERO = C.NUMERO
		INNER JOIN vw_tamanho B ON B.CODIGO_DO_PRODUTO = A.CODIGO_DO_PRODUTO
			GROUP BY YEAR(DATA_VENDA) , B.TAMANHO) AS VOLUME_ANO
		GROUP BY ANO;

/*VOLUME POR SABOR*/
SELECT 
			SABOR, SUM(VOLUME_L_PARCIAL) AS VOLUME_L, ANO
		FROM
			(SELECT 
			SABOR,
				(SUM(QUANTIDADE) * D.TAMANHO) AS VOLUME_L_PARCIAL,
				YEAR(DATA_VENDA) AS ANO,
				D.TAMANHO
		FROM
			itens_notas_fiscais A
		INNER JOIN tabela_de_produtos b ON A.CODIGO_DO_PRODUTO = B.CODIGO_DO_PRODUTO
		INNER JOIN notas_fiscais C ON A.NUMERO = C.NUMERO
		INNER JOIN VW_TAMANHO D ON A.CODIGO_DO_PRODUTO = D.CODIGO_DO_PRODUTO
				GROUP BY SABOR , D.TAMANHO , YEAR(DATA_VENDA) ) AS VOLUME_SABOR
		GROUP BY SABOR , ANO;
